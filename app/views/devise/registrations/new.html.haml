.text-center
  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f|
    = devise_error_messages!
    %h1.h3.mb-3.font-weight-normal Sign Up
    .form-group
      = f.label :nickname
      %br/
      = f.text_field :nickname, autofocus: true, class: 'form-control'

    .form-group
      = f.label :email
      %br/
      = f.email_field :email, autocomplete: "email", class: 'form-control'

    .form-group
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'form-control'

    .form-group
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'

    = f.submit "Sign Up", class: 'btn btn-lg btn-primary btn-block'

  = render "devise/shared/links"

