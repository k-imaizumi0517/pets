.col-md-4
  .card.mb-4.shadow-sm.card__background
    .card-body
      %h3.card-title
        = post.title
      %p.card-text.card-text__fix-height
        = truncate(post.text, length: 160)
      %p
        = link_to "View details &raquo;".html_safe, post_path(post), class: "btn btn-secondary", role: "button"
