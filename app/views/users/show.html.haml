%main{:role => "main"}
  .jumbotron
    .container
      .row
        .col-md-6.offset-md-3
          .card.mb-4.shadow-sm
            = image_tag @user.image, class: "card-img-top", alt: "No Image"
            .card-body
              name
              %h3.card-title
                = @user.nickname
              prefecture
              - if @user.prefecture_id.present?
                %h4.card-title
                  = @user.prefecture.name
              - else
                %p まだ登録されていません
              introduction
              - if @user.introduction.present?
                = simple_format(@user.introduction)
              - else
                %p まだ登録されていません
              - if user_signed_in? && current_user.id == @user.id
                .d-flex.justify-content-between.align-items-center
                  .btn-group
                    = link_to "Edit", edit_user_path(current_user), class: "btn btn-sm btn-outline-secondary", role: "button"
                    = link_to "Edit", edit_user_path(current_user), class: "btn btn-sm btn-outline-secondary", role: "button"
      %h2 Dogs List
      .row
        - if @dogs.present?
          = render partial: 'dog', collection: @dogs
        - else
          %p 現在登録はありません

  .album.py-5.album__background
    .container
      %h2 Posts List
      .row
        - if @posts.present?
          = render partial: 'post', collection: @posts
        - else
          %p 現在投稿はありません
      = paginate(@posts)
