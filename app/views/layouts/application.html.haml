!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Pets
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render 'layouts/notifications'
    %nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      = link_to "Dogs", root_path, class: "navbar-brand"
      %button.navbar-toggler{"aria-controls" => "navbarsExampleDefault", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarsExampleDefault", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon

      .collapse.navbar-collapse#navbarsExampleDefault
        %ul.navbar-nav.mr-auto
          %li.nav-item.active
            = link_to "#", class: "nav-link" do
              Home
              %span.sr-only(current)
          %li.nav-item
            = link_to "Link", "#", class: "nav-link"
          %li.nav-item
            = link_to "Disabled", "#", class: "nav-link disabled"
          %li.nav-item.dropdown
            %a#dropdown01.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "http://example.com"} Dropdown
            .dropdown-menu{"aria-labelledby" => "dropdown01"}
              = link_to "Action", "#", class: "dropdown-item"
              = link_to "Another action", "#", class: "dropdown-item"
              = link_to "Something else here", "#", class: "dropdown-item"
          %li.nav-item.dropdown
            %a#dropdown01.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "http://example.com"} Category
            .dropdown-menu{"aria-labelledby" => "dropdown01"}
              / - @categories.each do |category|
              /   = link_to category.name, category_path(category), class: "dropdown-item"
              = link_to "病気", "/categories/1", class: "dropdown-item"
              = link_to "しつけ", "/categories/2", class: "dropdown-item"
              = link_to "病院", "/categories/3", class: "dropdown-item"
              = link_to "その他", "/categories/4", class: "dropdown-item"
          - if user_signed_in?
            %li.nav-item.dropdown
              %a#dropdown01.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "http://example.com"}= current_user.nickname
              .dropdown-menu{"aria-labelledby" => "dropdown01"}
                = link_to "投稿する", new_post_path, class: "dropdown-item"
                = link_to "犬を登録", new_dog_path, class: "dropdown-item"
                = link_to "My Page", user_path(current_user), class: "dropdown-item"
                = link_to "Sign Out", destroy_user_session_path, class: "dropdown-item", method: :delete
          - else
            %li.nav-item.dropdown
              %a#dropdown01.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "http://example.com"} Sign In
              .dropdown-menu{"aria-labelledby" => "dropdown01"}
                = link_to "Sign In", new_user_session_path, class: "dropdown-item"
                = link_to "Sign Up", new_user_registration_path, class: "dropdown-item"

        %form.form-inline.my-2.my-lg-0
          %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :type => "text"}/
          %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search

    = yield

    %footer.container
      %p &copy; Company 2017-2018



